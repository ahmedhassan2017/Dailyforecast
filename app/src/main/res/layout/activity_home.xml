<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_light"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context=".ui.home.HomeActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:padding="16dp">

            <TextView
                android:id="@+id/welcomeTv"
                style="@style/FontLocalizedNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"

                tools:text="Good Morning" />

            <TextView
                android:id="@+id/name"
                style="@style/FontLocalizedNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                tools:text="Ahmed" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textInputLayoutCity"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"

                android:textColorHint="@color/white"
                app:boxStrokeColor="@color/white"
                app:endIconTint="@color/white"
                app:startIconDrawable="@drawable/ic_city"
                app:startIconTint="@color/white">

                <AutoCompleteTextView
                    android:id="@+id/textEditCity"
                    style="@style/TextInputEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:hint="@string/select_your_city"
                    android:inputType="none"
                    android:paddingStart="50dp"
                    android:paddingEnd="5dp"
                    android:textSize="20sp" />
            </com.google.android.material.textfield.TextInputLayout>


            <TextView
                android:id="@+id/date"
                style="@style/FontLocalizedNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                tools:text="Monday - 18 March" />


            <LinearLayout
                android:id="@+id/dataContainer"
                android:visibility="gone"
                tools:visibility="visible"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp">

                    <TextView
                        android:id="@+id/temp"
                        style="@style/FontLocalizedBold"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="80sp"
                        tools:text="73" />

                    <ImageView
                        android:id="@+id/imageTmp"
                        style="@style/FontLocalizedBold"
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        tools:src="@drawable/ic_sun"
                        tools:text="73" />

                </LinearLayout>

                <TextView
                    android:id="@+id/condition"
                    style="@style/FontLocalizedBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    tools:text="Mostly Sunny" />


                <TextView
                    android:id="@+id/condition_Description"
                    style="@style/FontLocalizedNormal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    tools:text="item (itâ€™s up to you) to indicate weather description like (Rain, Snow, Extreme etc.)" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginTop="50dp">

                    <TextView
                        style="@style/FontLocalizedBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:drawablePadding="10dp"
                        android:text="@string/next_days"
                        android:textColor="@color/white"
                        android:textSize="20sp"
                        app:drawableEndCompat="@drawable/ic_arrow" />


                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/days"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/list_item" />
            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>